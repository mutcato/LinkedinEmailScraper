{
    "manifest_version": 2,
    "name": "Linkedin Income Estimator",
    "short_name": "LN",
    "description": "Linkedindeki bağlantılarınızın aylık kazançlarını tahmin eder.",
    "background": {
        "page": "background.html"
    },
    "content_scripts": [
        {
        "matches": [
            "https://banabenianlat.net/*",
            "https://www.linkedin.com/*"
            ],
        "js": ["jquery.js","content.js"],
        "run_at": "document_end"        
        }
    ], 
    "browser_action": {
        "default_popup": "popup.html"
    },
    "version": "1.0.1",
    "permissions": [
        "tabs"
        ],
    "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
    "icons": { "16": "icon/icon16.png",
        "48": "icon/icon48.png",
       "128": "icon/icon128.png" }
}